<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Given name</th>
      <th>First names</th>
      <th>Family name</th>
      <th>Honorific prefix</th>
      <th>Honorific suffix</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Deathday</th>
      <th>About</th>
      <th>Place of birth</th>
      <th>Place of death</th>
      <th>Profession</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.given_name %></td>
        <td><%= person.first_names %></td>
        <td><%= person.family_name %></td>
        <td><%= person.honorific_prefix %></td>
        <td><%= person.honorific_suffix %></td>
        <td><%= person.gender %></td>
        <td><%= person.birthday %></td>
        <td><%= person.deathday %></td>
        <td><%= person.about %></td>
        <td><%= person.place_of_birth %></td>
        <td><%= person.place_of_death %></td>
        <td><%= person.profession %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

