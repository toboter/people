<%= simple_form_for(@institution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :parent_id, collection: Institution.possible_parents(@institution), 
        label_method: :name, value_method: :id, input_html: {id: 'institution_parent_id'} %>
    <%= f.input :name %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :url %>
    <%= f.input :street %>
    <%= f.input :zip %>
    <%= f.input :city %>
    <%= f.input :country %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
